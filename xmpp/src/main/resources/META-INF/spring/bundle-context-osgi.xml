<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                      http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd"
	osgi:default-cardinality="0..X">
	<!--
		definitions using elements of the osgi namespace can be included in
		this file. There is no requirement to keep these definitions in a
		separate file if you do not want to. The rationale for keeping these
		definitions separate is to facilitate integration testing of the
		bundle outside of an OSGi container
	-->
	<!--
		<osgi:reference id="connections"
		interface="org.jivesoftware.smack.XMPPConnection"> <osgi:listener
		ref="chatManagerListenerRegistry" bind-method="addConnection"
		unbind-method="removeConnection" /> </osgi:reference>
	-->
	<osgi:service id="chatContextManagerService" interface="org.mnode.base.xmpp.ChatContextManager"
		ref="chatContextManager" />
	<osgi:reference id="connectionListeners"
		interface="org.jivesoftware.smack.ConnectionListener">
		<osgi:listener ref="connectionListenerRegistry"
			bind-method="addConnectionListener" unbind-method="removeConnectionListener" />
	</osgi:reference>
	<osgi:reference id="chatManagerListeners"
		interface="org.jivesoftware.smack.ChatManagerListener">
		<osgi:listener ref="chatManagerListenerRegistry"
			bind-method="addChatManagerListener" unbind-method="removeChatManagerListener" />
	</osgi:reference>
	<osgi:reference id="fileTransferListeners"
		interface="org.jivesoftware.smackx.filetransfer.FileTransferListener">
		<osgi:listener ref="fileTransferListenerRegistry"
			bind-method="addFileTransferListener" unbind-method="removeFileTransferListener" />
	</osgi:reference>
</beans>